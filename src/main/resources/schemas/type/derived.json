{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "type/derived.json",

  "definitions": {
    "DATA32": {
      "description": "DATA, 32 bytes",
      "allOf": [
        {"$ref": "root.json#/definitions/DATA"},
        {"minLength": 66, "maxLength": 66}
      ]
    },

    "DATA64": {
      "description": "DATA, 64 bytes",
      "allOf": [
        {"$ref": "root.json#/definitions/DATA"},
        {"minLength": 130, "maxLength": 130}
      ]
    },

    "Transaction": {
      "type": "object",
      "properties": {
        "blockHash": {"$ref": "derived.json#/definitions/DATA32"},
        "blockNumber": {"$ref": "derived.json#/definitions/QUANTITY"},
        "from": {"$ref": "derived.json#/definitions/DATA32"},
        "nrg": {"$ref": "derived.json#/definitions/QUANTITY"},
        "nrgPrice": {"$ref": "derived.json#/definitions/QUANTITY"},
        "gas": {"$ref": "derived.json#/definitions/QUANTITY"},
        "gasPrice": {"$ref": "derived.json#/definitions/QUANTITY"},
        "hash": {"$ref": "derived.json#/definitions/DATA32"},
        "input": {"$ref": "derived.json#/definitions/DATA"},
        "nonce": {"$ref": "derived.json#/definitions/QUANTITY"},
        "to": {"$ref": "derived.json#/definitions/DATA32"},
        "transactionIndex": {"$ref": "derived.json#/definitions/QUANTITY"},
        "value": {"$ref": "derived.json#/definitions/QUANTITY"},
        "timestamp": {"$ref": "derived.json#/definitions/QUANTITY"}
      }
    },

    "CallRequest": {
      "type": "object",
      "$comment": "Prototype version; don't use yet!",
      "properties": {
        "to": {"$ref": "derived.json#/definitions/DATA32"},
        "value": {"$ref": "root.json#/definitions/QUANTITY"},
        "data": {"$ref": "root.json#/definitions/DATA"}
      }
    },

    "SomeStruct": {
      "$comment": "Test structure used only by unit tests.",
      "type": "object",
      "properties": {
        "MyData": {"$ref": "derived.json#/definitions/DATA32"},
        "MyQuantity": {"$ref": "root.json#/definitions/QUANTITY"}
      }
    }

  }
}